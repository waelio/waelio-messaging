{
    "name": "@waelio/messaging",
    "version": "1.0.2",
    "repository": {
        "type": "git",
        "url": "https://github.com/waelio/waelio-messaging.git"
    },
    "main": "dist/MessagingHub.js",
    "types": "dist/MessagingHub.d.ts",
    "files": [
        "dist/",
        "README.md"
    ],
    "type": "module",
    "publishConfig": {
        "access": "public"
    },
    "keywords": [
        "messaging",
        "websocket",
        "real-time",
        "chat",
        "express"
    ],
    "author": "Waelio",
    "license": "MIT",
    "description": "A real-time messaging application with direct & broadcast messages, user lists, and optional MongoDB persistence.",
    "dependencies": {
        "dotenv": "^16.4.5",
        "express": "^4.21.2",
        "mongodb": "^6.8.0",
        "uuid": "^9.0.1",
        "ws": "^8.18.3"
    },
    "devDependencies": {
        "@types/chai": "^5.2.3",
        "@types/express": "^4.17.21",
        "@types/mocha": "^10.0.10",
        "@types/node": "^20.14.9",
        "@types/uuid": "^9.0.8",
        "@types/ws": "^8.5.10",
        "chai": "^4.4.1",
        "mocha": "^10.4.0",
        "ts-node": "^10.9.2",
        "typescript": "^5.5.3"
    },
    "scripts": {
        "clean": "rm -rf dist public",
        "test": "mocha",
        "test:server": "mocha test/server.test.ts",
        "build": "npm run clean && tsc -p tsconfig.json && tsc -p tsconfig.client.json && npm run copy-files",
        "copy-files": "cp src/client/index.html public/index.html",
        "start": "node dist/server.js",
        "dev": "ts-node src/server.ts",
        "docker:up": "docker compose up --build -d",
        "docker:down": "docker compose down"
    }
}